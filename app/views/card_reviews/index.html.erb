<p id="notice"><%= notice %></p>

<h1>Card Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Card</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @card_reviews.each do |card_review| %>
      <tr>
        <td><%= card_review.user.name %></td>
        <td><%= card_review.card.front_side %>|<%= card_review.card.back_side %></td>
        <td><%= card_review.review %></td>
        <td><%= link_to 'Show', card_review %></td>
        <td><%= link_to 'Edit', edit_card_review_path(card_review) %></td>
        <td><%= link_to 'Destroy', card_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card Review', new_card_review_path %>
