<p id="notice"><%= notice %></p>

<h1>Study Sets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_sets.each do |study_set| %>
      <tr>
        <td><%= study_set.user_id %></td>
        <td><%= study_set.name %></td>
        <td><%= link_to 'Show', study_set %></td>
        <td><%= link_to 'Edit', edit_study_set_path(study_set) %></td>
        <td><%= link_to 'Destroy', study_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Study Set', new_study_set_path %>
