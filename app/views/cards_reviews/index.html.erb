<p id="notice"><%= notice %></p>

<h1>Cards Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cards</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards_reviews.each do |cards_review| %>
      <tr>
        <td><%= cards_review.user_id %></td>
        <td><%= cards_review.cards_id %></td>
        <td><%= cards_review.review %></td>
        <td><%= link_to 'Show', cards_review %></td>
        <td><%= link_to 'Edit', edit_cards_review_path(cards_review) %></td>
        <td><%= link_to 'Destroy', cards_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cards Review', new_cards_review_path %>
